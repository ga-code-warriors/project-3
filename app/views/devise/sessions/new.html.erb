</body>
<div class="container ">  
<div id="loginbox" style="margin:10% auto;" class="mainbox col-md-5 col-md-offset-3 col-sm-8 col-sm-offset-2 text-center">    
<div style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19); padding:30px; width:100%; background: rgba(255, 255, 255, .9);">   
                
                      <h1> Please sign in </h1>
                      </br> </br> 
                      
                       <%= form_for(resource, as: resource_name, url: session_path(resource_name))  do |f| %>
                         <div class="form-group input-group" >
                           <div class="input-group-prepend" >
                               <span class="input-group-text" , style="border:#b2b2b2 solid 1px;">
                                    <i class="fa fa-user" > <img src="https://img.icons8.com/ios/18/000000/new-post-filled.png"></i>
                               </span>
                           </div>
                           <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: 'form-control' , placeholder:'Email address' , style:'border:#b2b2b2 solid 1px;' %>
                         </div>

                         <div class="form-group input-group">
                                 <div class="input-group-prepend">
                                 <span class="input-group-text"  , style="border:#b2b2b2 solid 1px;">
                                     <i class="fa fa-user " > <img src="https://img.icons8.com/material/18/000000/lock.png"> </i>
                                 </span>
                                 </div>
                           <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' , placeholder:'password'  , style:'border:#b2b2b2 solid 1px;'%>
                         </div>
                         
                         <% if devise_mapping.rememberable? %>
                           <div class="form-signin">
                             <%= f.check_box :remember_me %>
                             <%= f.label :remember_me %>
                         </div>
                         <% end %>
                         </br>
                         <div class="actions">
                           <%= f.submit "Log in" , class: 'btn btn-outline-secondary col-md-12', style:'border:1px solid black; width:200px;' %>
                         </div>
                         </br>
                       <% end %>

                       <%= render "devise/shared/links" %>

</div>
</div>
</div>