<div class="container ">  
<div id="loginbox" style="margin:10% auto;" class="mainbox col-md-5 col-md-offset-3 col-sm-8 col-sm-offset-2 text-center">    
<div style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19); padding:30px; width:100%;">   

            <h2>Forgot your password?</h2>
            </br> </br> 
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="form-group input-group"">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                     <i class="fa fa-user" > <img src="https://img.icons8.com/ios/18/000000/new-post-filled.png"></i>
                                </span>
                            </div>
                            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' , placeholder:'Email address' %>
              </div>

              <div class="actions">
                <%= f.submit "Send me reset password instructions"  , class: 'btn btn-primary col-md-12' %>
              </div>
            <% end %>
            </br>

            <%= render "devise/shared/links" %>
  </div>
  </div>
  </div>