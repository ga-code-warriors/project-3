<div class="container ">  
<div id="loginbox" style="margin:10% auto;" class="mainbox col-md-5 col-md-offset-3 col-sm-8 col-sm-offset-2 text-center">    

<div style="border-left:25px black solid; box-shadow: 0 4px 3px 0 rgba(0, 0, 0, 0.1), 0 3px 10px 0 rgba(0, 0, 0, 0.19); padding:30px; width:100%; border-top-right-radius: 25px; border-bottom-right-radius: 25px; position: relative; background:#c0e2f5;">

<div style="
position: absolute;
left: 10px;
top: 0px; 
height: 70px; 
width: 50px; 
padding: 0px; 
-webkit-transform: rotate(0deg) skew(0deg); 
transform: rotate(0deg) skew(0deg); 
border-left: 25px solid darkred; 
border-right: 25px solid darkred; 
border-bottom: 25px solid transparent;"></div> 
<h1>New Book</h1>
</br>

              <%= form_with(model: book, local: true) do |form| %>
                <% if book.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

                    <ul>
                    <% book.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                    </ul>
                  </div>
                <% end %>

                  <div class="form-group input-group" >
                  <div class="input-group-prepend" >
                      <span class="input-group-text" , style="border:#b2b2b2 solid 1px;">
                          <i class="fa fa-user" > <img src="https://img.icons8.com/ios/18/000000/literature-filled.png"></i>
                      </span>
                  </div>
                                  <%= form.text_field :title  , class: 'form-control' , placeholder:'Title' , style:'border:#b2b2b2 solid 1px; ' %>
                        </div>
                        <div class="form-group input-group" >
                            <div class="input-group-prepend" >
                                <span class="input-group-text" , style="border:#b2b2b2 solid 1px;">
                                     <i class="fa fa-user" > <img src="https://img.icons8.com/ios/18/000000/literature-filled.png"></i>
                                </span>
                            </div>
                  <%= form.text_field :author , class: 'form-control' , placeholder:'Author' , style:'border:#b2b2b2 solid 1px;' %>
                </div>

                <div class="form-group input-group" >
                            <div class="input-group-prepend" >
                                <span class="input-group-text" , style="border:#b2b2b2 solid 1px;">
                                     <i class="fa fa-user" > <img src="https://img.icons8.com/ios/18/000000/literature-filled.png"></i>
                                </span>
                            </div>
                  <%= form.text_field :description , class: 'form-control' , placeholder:'Description' , style:'border:#b2b2b2 solid 1px;' %>
                </div>

                <div class="field">
                  <%= form.file_field :image, :class => 'btn btn-primary col-md-12' , style:'background:white; color:black; border-color:#a3a1a1;'  %> 
                </div>
                </br>
                <div >
                  <%= form.label :category    %>
                  <%= form.select :category, ['Arts & Music', 'Business', 'Kids' , 'Computers & Tech' , 'Cooking' , 'Medical' , 'Religion' , 'Sports' , 'Travel' , 'Entertainment' , 'History' , 'Edictation']%>
                </div>
                  </br> 
                <div class="actions">
                <%= form.submit 'create a book', :class => 'btn btn-primary col-md-12' , style:"background:darkred; border-color:darkred"  %>
                </div>
              <% end %>
              </br>

              <%= link_to 'Back', books_path , style:"color:black" %>
</div>
</div>
</div>