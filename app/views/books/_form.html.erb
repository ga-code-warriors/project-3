
<div class="container ">  
<div id="loginbox" style="margin:10% auto;" class="mainbox col-md-5 col-md-offset-3 col-sm-8 col-sm-offset-2 text-center">    

<div style="border-left:2px black solid; box-shadow: 0 4px 3px 0 rgba(0, 0, 0, 0.1), 0 3px 10px 0 rgba(0, 0, 0, 0.19); padding:30px; width:100%; border-top-right-radius: 25px; border-bottom-right-radius: 25px; position: relative; background:url('https://us.123rf.com/450wm/kreinick/kreinick1001/kreinick100100012/6340279-.jpg?ver=6');">

<h1 style="color:white">New Book</h1>
</br>

              <%= form_with(model: book, local: true) do |form| %>
                <% if book.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

                    <ul>
                    <% book.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                    </ul>
                  </div>
                <% end %>

                      <div>
                                  <%= form.text_field :title  , class: 'form-control' , placeholder:'Title' , style:'border:#b2b2b2 solid 1px; ' %>
                        </div>

                 <div class="form-group input-group" >
                            <div class="input-group-prepend" >
                                <span class="input-group-text" , style="border:#b2b2b2 solid 1px;">
                                     <i class="fa fa-user" > <img src="https://img.icons8.com/ios/18/000000/new-post-filled.png"></i>
                                </span>
                            </div>
                  <%= form.text_field :author , class: 'form-control' , placeholder:'Author' , style:'border:#b2b2b2 solid 1px;' %>
                </div>

                <div class="form-group input-group" >
                            <div class="input-group-prepend" >
                                <span class="input-group-text" , style="border:#b2b2b2 solid 1px;">
                                     <i class="fa fa-user" > <img src="https://img.icons8.com/ios/18/000000/new-post-filled.png"></i>
                                </span>
                            </div>
                  <%= form.text_field :description , class: 'form-control' , placeholder:'Description' , style:'border:#b2b2b2 solid 1px;' %>
                </div>

                <div class="field">
                  
                  <%= form.file_field :image  %> 
                </div>
                </br>
                <div >
                  <%= form.label :category %>
                
                  
                  <%= form.select :category, ['Arts & Music', 'Business', 'Kids' , 'Computers & Tech' , 'Cooking' , 'Medical' , 'Religion' , 'Sports' , 'Travel' , 'Entertainment' , 'History' , 'Edictation']%>
                </div>

                <div class="actions">
                  <%= form.submit %>
                </div>
              <% end %>

              <%= link_to 'Back', books_path %>
</div>
</div>
</div>